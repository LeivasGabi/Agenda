<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">
    <Button
        android:id="@+id/btn_easy"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:drawableBottom="@drawable/easy"
        app:layout_constraintBottom_toTopOf="@+id/btn_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_regular"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:drawableBottom="@drawable/medio"
        app:layout_constraintBottom_toTopOf="@+id/btn_hard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_easy" />

    <Button
        android:id="@+id/btn_hard"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:drawableBottom="@drawable/hard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_regular" />

</androidx.constraintlayout.widget.ConstraintLayout>